                </Grid>
                <Grid Grid.Row="2">

                </Grid>
            </Grid>

            <Grid Grid.Column="2">
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition Height="169.2"/>
                </Grid.RowDefinitions>
                <Grid Grid.Row="0" Margin="0,0,0.2,98.2" Grid.RowSpan="2">
                    <TabControl x:Name="Tab1">

                    </TabControl>
                </Grid>
                <Grid Grid.Row="1" Margin="0,0.4,0.2,0.2">
                    <TextBox VerticalScrollBarVisibility="Visible" Name="ErAndMsgBox"/>
                </Grid>


            </Grid>
        </Grid>


    </Grid>
